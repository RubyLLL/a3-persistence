
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <form action="">
        <div class="form-group">
          <label for="user">Title</label>
          <input
            type="name"
            id="title"
            name="title"
            class="form-control"
            placeholder="Enter Book Title"
            value=""
            required
          />
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          <input
            type="name"
            id="author"
            name="author"
            class="form-control"
            placeholder="Enter Author"
            value=""
            required
          />
        </div>
        <div class="form-group">
          <label for="isbn">ISBN#</label>
          <input
            type="text"
            id="isbn"
            name="isbn"
            class="form-control"
            placeholder="Create ISBN#"
            value=""
            required
          />
        </div>
        <div class="form-group">
            <label>I have a copy of this book.</label>
          <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="copy" id="true" value="true">
              <label class="form-check-label" for="inlineRadio1">Yes</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="copy" id="false" value="false">
              <label class="form-check-label" for="inlineRadio2">No</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
    </div>
  </div>
</div>
<script src="../js/script.js" ></script>